extends layout

block content
  h1= title

  // Affichage des données JSON
  ul
    li Compte : #{user.preferred_username}
    li First name : #{user.given_name}
    li Last name : #{user.family_name}
    li Email : #{user.email}
    li Email verified ? #{user.email_verified}

  // Formulaire de déconnexion
  form(action='/oidc/logout', method='get')
    button(type='submit') Déconnexion
  
  // home
  form(action="/", method="get")
    button(type="submit") HOME
